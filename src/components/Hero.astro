---
interface Props {
    title: string;
    subtitle?: string;
    image?: string; // URL for background image
    video?: string; // URL for background video (optional override)
    ctaText?: string;
    ctaLink?: string;
}

const {
    title,
    subtitle = "Now Streaming",
    image = "https://images.unsplash.com/photo-1489599849927-2ee91cede3ba?q=80&w=2070&auto=format&fit=crop",
    ctaText = "Watch Now",
    ctaLink = "#",
} = Astro.props;
---

<section
    class="relative h-[70vh] w-full overflow-hidden flex items-center justify-center bg-black text-white mb-12"
>
    {/* Background Image - with overlay */}
    <div class="absolute inset-0 z-0">
        <img
            src={image}
            alt={title}
            class="w-full h-full object-cover opacity-60"
        />
        <div
            class="absolute inset-0 bg-gradient-to-t from-black via-transparent to-black/30"
        >
        </div>
    </div>

    {/* Content */}
    <div
        class="relative z-10 text-center px-4 max-w-4xl mx-auto flex flex-col items-center"
    >
        <span
            class="text-[#ff208a] font-mono text-xs md:text-sm uppercase tracking-[0.2em] mb-4"
        >
            {subtitle}
        </span>
        <h1
            class="text-5xl md:text-7xl lg:text-9xl font-black tracking-tighter uppercase mb-8 leading-[0.9]"
        >
            {title}
        </h1>

        <a
            href={ctaLink}
            class="group relative px-8 py-3 bg-white text-black font-bold uppercase tracking-widest text-sm hover:bg-[#ff208a] hover:text-white transition-colors duration-300"
        >
            {ctaText}
        </a>
    </div>
</section>
