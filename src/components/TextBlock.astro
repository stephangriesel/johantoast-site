---
interface Props {
    text: string;
    subtext?: string;
    align?: "left" | "center" | "right";
}

const { text, subtext, align = "center" } = Astro.props;

const alignClass = {
    left: "text-left items-start",
    center: "text-center items-center",
    right: "text-right items-end",
}[align];
---

<div
    class={`flex flex-col justify-center py-12 md:py-24 px-4 border-y border-white/10 my-12 bg-neutral-900/20 ${alignClass}`}
>
    {
        subtext && (
            <span class="text-[#ff208a] font-mono text-xs uppercase tracking-widest mb-4">
                {subtext}
            </span>
        )
    }
    <h2
        class="text-4xl md:text-6xl lg:text-8xl font-black uppercase tracking-tighter leading-none text-transparent bg-clip-text bg-gradient-to-b from-white to-white/50"
    >
        {text}
    </h2>
</div>
